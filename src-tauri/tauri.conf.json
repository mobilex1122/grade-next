{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Grade Next",
  "version": "0.0.2",
  "identifier": "cz.janpalma.gradesnext",
  "build": {
    "beforeDevCommand": "pnpm start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist/grades-next/browser"
  },
  "app": {
    "windows": [
      {
        "title": "Grades Next",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
